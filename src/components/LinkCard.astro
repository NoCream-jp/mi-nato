---
interface Props {
	href: string;
	thumbnail: string;
	title: string;
	description: string;
}

const { href, thumbnail, title, description } = Astro.props;
---

<a href={href} class="link-card">
	<img src={thumbnail} alt={title} class="card-image" />
	<div class="card-overlay">
		<div class="icon-wrapper">
			<i class="fa-solid fa-arrow-right"></i>
		</div>
		<p class="card-description">{description}</p>
	</div>
</a>

<style>
	.link-card {
		position: relative;
		display: block;
		width: 300px;
		height: 200px;
		border-radius: 15px;
		overflow: hidden;
		text-decoration: none;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
	}

	.card-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
	}

	.card-overlay {
		position: absolute;
		inset: 0; /* top, right, bottom, left: 0 と同じ */
		background: rgba(255, 255, 255, 0.2);
		backdrop-filter: blur(0px); /* 初期状態はぼかしなし */
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		opacity: 0;
		transition: all 0.3s ease;
		color: white;
		font-weight: bold;
		padding: 20px;
		text-align: center;
	}

	/* ホバー時のスタイル */
	.link-card:hover .card-overlay {
		opacity: 1;
		backdrop-filter: blur(5px); /* すりガラス効果 */
		background: rgba(0, 0, 0, 0.4); /* 文字が見やすいように少し暗く */
	}

	.icon-wrapper {
		font-size: 2rem;
		margin-bottom: 10px;
	}
</style>